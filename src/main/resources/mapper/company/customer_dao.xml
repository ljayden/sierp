<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.company.customer_dao">
 
    <select id="selectCustomer" resultType="map">
    	SELECT * FROM customer
    </select>
    
    <select id="selectCustomerByCode" parameterType="map" resultType="com.sierp.web.domain.company.model.Customer">
    	SELECT * FROM customer WHERE customer_code = #{customerCode}
    </select>

    <select id="selectCustomerManagerByIdPassword" parameterType="map" resultType="com.sierp.web.domain.company.model.CustomerManager">
    	SELECT * FROM customer_manager 
    	WHERE customer_code = #{customerCode}
    	AND	  id = #{id}
    	AND   password = #{password}
    </select>

    <select id="selectCustomerManagerList" parameterType="map" resultType="com.sierp.web.domain.company.model.CustomerManager">
    	SELECT * FROM customer_manager 
    	WHERE customer_code = #{customerCode}
    </select>
    
    

</mapper>